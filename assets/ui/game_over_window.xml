<?xml version = "1.0"?>
<root>
   <component type="GameOverWindow" id="gameOverWindow">
      <refs>
         <ref id="retryButton" compId="retryButtonComp"/>
         <ref id="quitButton" compId="quitButtonComp"/>
         <ref id="score" compId="score"/>
      </refs>
   </component>
   <node name="window">
      <node name="background">
         <component type="UISpriteComponent" texture="background_level_1">
            <color r="255" g="200" b="200" a="255"/>
         </component>
      </node>
      <node name="text">
         <component type="UITextComponent" text="GAME OVER" font="oakside" size="55" letterSpace="2">
            <color r="255" g="125" b="125" a="255"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="120" y="70"/>
         </component>
      </node>
      <node name="scoreLabel">
         <component type="UITransformComponent" rotation="0">
               <position x="250" y="200"/>
         </component>
         <node name="label">
            <component type="UITextComponent" text="Your score:" font="oakside" size="25">
               <color r="200" g="200" b="200" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="0" y="0"/>
            </component>
         </node>
         <node name="amount">
            <component type="UITextComponent" text="0" font="oakside" size="25" id="score">
               <color r="200" g="200" b="200" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="250" y="0"/>
            </component>
         </node>
      </node>
      <node name="retryButton">
         <component type="UIButtonComponent" id="retryButtonComp">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="300" y="300"/>
         </component>
         <component type="UIScreenNormComponent">
         </component>
         <node name="text">
            <component type="UITextComponent" text="RETRY" font="oakside">
               <color r="200" g="100" b="100" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="20" y="5"/>
            </component>
         </node>
      </node>
      <node name="quitButton">
         <component type="UIButtonComponent" id="quitButtonComp">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="300" y="400"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="QUIT" font="oakside">
               <color r="200" g="100" b="100" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="40" y="5"/>
            </component>
         </node>
      </node>
   </node>
</root>