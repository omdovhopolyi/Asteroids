<?xml version = "1.0"?>
<root>
   <component type="ManualWindow" id="manualWindow">
      <refs>
         <ref id="backButton" compId="backButtonComp"/>
      </refs>
   </component>
   <node name="window">
      <node name="background">
         <component type="UISpriteComponent" texture="background_level_1">
            <color r="200" g="200" b="255" a="255"/>
         </component>
      </node>
      <node name="text">
         <component type="UITextComponent" text="SPACE 1" font="oakside" size="80" letterSpace="4">
            <color r="0" g="125" b="255" a="255"/>
         </component>
         <component type="UITransformComponent">
            <position x="80" y="70"/>
         </component>
      </node>
      <node>
         <component type="UITransformComponent">
            <position x="270" y="200"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="W - move up" font="oakside" size="24"> <!--letterSpace="4"-->
               <color r="0" g="125" b="255" a="255"/>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="S - move down" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <position x="0" y="25"/>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="D - move right" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <position x="0" y="50"/>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="A - move left" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <position x="0" y="75"/>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="Space - fire" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <position x="0" y="100"/>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="Aim with mouse" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <position x="0" y="125"/>
            </component>
         </node>
      </node>
      <node name="backButton">
         <component type="UIButtonComponent" id="backButtonComp" sound_hover="button_hover" sound_press="button_press" sound_release="button_release">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="300" y="400"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="BACK" font="oakside">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="40" y="5"/>
            </component>
         </node>
      </node>
   </node>
</root>