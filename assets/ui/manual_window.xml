<?xml version = "1.0"?>
<root>
   <component type="ManualWindow" id="manualWindow">
      <backButton compId="backButtonComp"/>
   </component>
   <node name="window">
      <node name="background">
         <component type="UISpriteComponent" sprite="menu_window_backgrounds">
            <color r="200" g="200" b="255" a="255"/>
         </component>
      </node>

      <node name="title">
         <component type="UISpriteComponent" sprite="title_main">
            <color r="200" g="200" b="255" a="255"/>
         </component>
         <component type="UITransformComponent">
            <transform>
               <position x="0" y="50"/>
            </transform>
         </component>
      </node>

      <node name="subtitle">
         <component type="UISpriteComponent" sprite="title_manual">
            <color r="200" g="200" b="255" a="255"/>
         </component>
         <component type="UITransformComponent">
            <transform>
               <position x="0" y="150"/>
            </transform>
         </component>
      </node>

      <node>
         <component type="UITransformComponent">
            <transform>
               <position x="270" y="250"/>
            </transform>
         </component>
         <node name="text">
            <component type="UITextComponent" text="W - move up" font="oakside" size="24"> <!--letterSpace="4"-->
               <color r="0" g="125" b="255" a="255"/>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="S - move down" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <transform>
                  <position x="0" y="25"/>
               </transform>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="D - move right" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <transform>
                  <position x="0" y="50"/>
               </transform>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="A - move left" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <transform>
                  <position x="0" y="75"/>
               </transform>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="Space - fire" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <transform>
                  <position x="0" y="100"/>
               </transform>
            </component>
         </node>
         <node name="text">
            <component type="UITextComponent" text="Aim with mouse" font="oakside" size="24">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent">
               <transform>
                  <position x="0" y="125"/>
               </transform>
            </component>
         </node>
      </node>
      <node name="backButton">
         <component type="UIButtonComponent" id="backButtonComp" sprite_idle="button_back_normal" sprite_pressed="button_back_press" sprite_hovered="button_back_hover" sound_hover="button_hover" sound_press="button_press" sound_release="button_release"/>
         <component type="UITransformComponent">
            <transform>
               <position x="248" y="450"/>
            </transform>
         </component>
      </node>
   </node>
</root>