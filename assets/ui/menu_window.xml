<?xml version = "1.0"?>
<root>
   <component type="MenuWindow" id="menuWindow">
      <refs>
         <ref id="playButton" compId="playButtonComp"/>
         <ref id="settingsButton" compId="settingsButtonComp"/>
         <ref id="quitButton" compId="quitButtonComp"/>
      </refs>
   </component>
   <node name="window">
      <node name="background">
         <component type="UISpriteComponent" texture="menu_background" fill="true"/>
      </node>
      <node name="playButton">
         <component type="UIButtonComponent" id="playButtonComp">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="100" y="100"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="PLAY" font="arial"/>
            <component type="UITransformComponent" rotation="0">
               <position x="0" y="0"/>
            </component>
         </node>
      </node>
      <node name="settingsButton">
         <component type="UIButtonComponent" id="settingsButtonComp">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="100" y="250"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="SETTINGS" font="arial"/>
            <component type="UITransformComponent" rotation="0">
               <position x="0" y="0"/>
            </component>
         </node>
      </node>
      <node name="quitButton">
         <component type="UIButtonComponent" id="quitButtonComp">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="100" y="400"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="QUIT" font="arial"/>
            <component type="UITransformComponent" rotation="0">
               <position x="0" y="0"/>
            </component>
         </node>
      </node>
   </node>
</root>