<?xml version = "1.0"?>
<root>
   <component type="MenuWindow" id="menuWindow">
      <playButton compId="playButtonComp"/>
      <manualButton compId="manualButtonComp"/>
      <quitButton compId="quitButtonComp"/>
   </component>
   <node name="window">
      <node name="background">
         <component type="UISpriteComponent" sprite="menu_window_backgrounds">
            <color r="200" g="200" b="255" a="255"/>
         </component>
      </node>
      <node name="title">
         <component type="UISpriteComponent" sprite="title_main">
            <color r="200" g="200" b="255" a="255"/>
         </component>
         <component type="UITransformComponent">
            <transform>
               <position x="0" y="50"/>
            </transform>
         </component>
      </node>
      <node name="playButton">
         <component type="UIButtonComponent" id="playButtonComp" sprite_idle="button_play_normal" sprite_pressed="button_play_press" sprite_hovered="button_play_hover" sound_hover="button_hover" sound_press="button_press" sound_release="button_release"/>
         <component type="UITransformComponent">
            <transform>
               <position x="248" y="310"/>
            </transform>
         </component>
      </node>
      <node name="manualButton">
         <component type="UIButtonComponent" id="manualButtonComp" sprite_idle="button_manual_normal" sprite_pressed="button_manual_press" sprite_hovered="button_manual_hover" sound_hover="button_hover" sound_press="button_press" sound_release="button_release"/>
         <component type="UITransformComponent">
            <transform>
               <position x="248" y="380"/>
            </transform>
         </component>
      </node>
      <node name="quitButton">
         <component type="UIButtonComponent" id="quitButtonComp" sprite_idle="button_quit_normal" sprite_pressed="button_quit_press" sprite_hovered="button_quit_hover" sound_hover="button_hover" sound_press="button_press" sound_release="button_release"/>
         <component type="UITransformComponent">
            <transform>
               <position x="248" y="450"/>
            </transform>
         </component>
      </node>
   </node>
</root>