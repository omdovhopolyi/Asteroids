<?xml version = "1.0"?>
<root>
   <component type="MenuWindow" id="menuWindow">
      <refs>
         <ref id="playButton" compId="playButtonComp"/>
         <ref id="settingsButton" compId="settingsButtonComp"/>
         <ref id="quitButton" compId="quitButtonComp"/>
      </refs>
   </component>
   <node name="window">
      <node name="background">
         <component type="UISpriteComponent" texture="background_level_1">
            <color r="200" g="200" b="255" a="255"/>
         </component>
      </node>
      <node name="text">
         <component type="UITextComponent" text="SPACE 1" font="oakside" size="80" letterSpace="4">
            <color r="0" g="125" b="255" a="255"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <scale x="1" y="1"/>
            <position x="80" y="70"/>
         </component>
      </node>
      <node name="playButton">
         <component type="UIButtonComponent" id="playButtonComp" sound_hover="button_hover" sound_press="button_press" sound_release="button_release">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="300" y="300"/>
         </component>
         <component type="UIScreenNormComponent">
         </component>
         <node name="text">
            <component type="UITextComponent" text="PLAY" font="oakside">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="40" y="5"/>
            </component>
         </node>
      </node>
      <node name="quitButton">
         <component type="UIButtonComponent" id="quitButtonComp" sound_hover="button_hover" sound_press="button_press" sound_release="button_release">
            <sprite type="Idle" sprite="button_idle"/>
            <sprite type="Pressed" sprite="button_pressed"/>
            <sprite type="Hovered" sprite="button_hover"/>
         </component>
         <component type="UITransformComponent" rotation="0">
            <position x="300" y="400"/>
         </component>
         <node name="text">
            <component type="UITextComponent" text="QUIT" font="oakside">
               <color r="0" g="125" b="255" a="255"/>
            </component>
            <component type="UITransformComponent" rotation="0">
               <position x="40" y="5"/>
            </component>
         </node>
      </node>
   </node>
</root>